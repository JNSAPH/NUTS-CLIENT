{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nuts Client",
  "version": "0.2.0",
  "identifier": "com.jnsaph.nuts-client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Nuts Client",
        "width": 1000,
        "height": 600,
        "minHeight": 400,
        "minWidth": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
